{% extends "layout.jinja2" %}
{% block content %}
<form class="shelter_action shelter_delete" action="{{ url_for('shelters.delete', shelter_id=shelter.id) }}" method="post" enc="multipart/form-data">
  {{ form.hidden_tag() }}
  <h3 class="shelter_delete_head">Are you sure you want to delete {{ shelter.name }} from the database?</h3>
  <div class="shelter_delete_submit"><input type="submit" value="Delete"></div>
</form>
<div class="back_button_container"><a class="back_button" href="{{ url_for('shelters.profile', shelter_id=shelter.id) }}">&lt; Go back</a></div>
{% endblock %}
