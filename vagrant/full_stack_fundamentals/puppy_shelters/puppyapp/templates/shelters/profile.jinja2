{% from "macros.jinja2" import page_nav %}

{% extends "layout.jinja2" %}
{% block content %}
<div class="shelter">
  <h3 class="shelter_name">{{ shelter.name }}</h3>
  <div class="shelter_bottom_panel">
    <div class="shelter_info">
      {% if shelter.address and shelter.address|length %}
      <div class="shelter_fact shelter_address"><strong>Address:</strong> {{ shelter.address }}</div>
      {% endif %}
      {% if shelter.city and shelter.city|length %}
      <div class="shelter_fact shelter_city"><strong>City:</strong> {{ shelter.city }}</div>
      {% endif %}
      {% if shelter.state and shelter.state|length %}
      <div class="shelter_fact shelter_state"><strong>State:</strong> {{ shelter.state }}</div>
      {% endif %}
      {% if shelter.zip_code and shelter.zip_code|length %}
      <div class="shelter_fact shelter_zip_code"><strong>ZIP Code:</strong> {{ shelter.zip_code }}</div>
      {% endif %}
      {% if shelter.website and shelter.website|length %}
      <div class="shelter_fact shelter_website"><strong>Website:</strong> <a href="{{ shelter.website }}" target="_blank">click here</a></div>
      {% endif %}
    </div>
    <div class="shelter_options">
      <div><a href="{{ url_for('shelters.edit', shelter_id=shelter.id) }}">Edit Shelter Info</a></div>
      <div><a href="{{ url_for('shelters.delete', shelter_id=shelter.id) }}">Delete Shelter Profile</a></div>
    </div>
    {% include "embedded_puppy_list.jinja2" %}
  </div>
  <a href="{{ url_for('shelters.list_all') }}">Go back</a>
</div>
{% endblock %}

{% block pagenav %}
{{ page_nav(page, pagelimit, route="shelters.profile", shelter_id=shelter.id) }}
{% endblock %}
